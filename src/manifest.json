{
  "manifest_version": 3,
  "name": "better-gpt",
  "version": "1.0",
  "description": "Adds smooth scrolling to all h2 elements every 10 seconds.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
